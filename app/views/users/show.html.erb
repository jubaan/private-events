<strong> Events Created </strong>
<% @user.events.each do |event| %>
  <div>
    <%= event.location %>
    <%= event.date %>
    <%= event.description %>
    <% if event.host == current_user %>
      <%= link_to 'Edit', edit_event_path(event) %>
      <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
</div>

<div>
  <strong> Confirmed Appointments </strong>
  <% User.appointments_by_status(@user.id, true).each do |appointment| %>
    <%= appointment.event.description  %>
    <br>
  <% end %>
</div>

<div>
  <strong> Not Confirmed Appointments </strong>
  <% User.appointments_by_status(@user.id, false).each do |appointment| %>
    <%= appointment.event.description  %>
    <br>
  <% end %>
</div>

<% if @user == current_user %>
  <%= link_to 'Edit profile', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back to events', root_path %>
