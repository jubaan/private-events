<h3> Events Created </h3>
<% @user.events.each do |event| %>
  <div>
    <h4>
      <%= link_to event.title, event_path(event) %>
    </h4>
    <% if event.host == current_user %>
      <%= link_to 'Edit', edit_event_path(event) %>
      <span> | </span>
      <%= link_to 'Cancel Event', event, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <%= render "events/event_info", event: event%>
  </div>
<% end %>

<div>
  <h3> Confirmed Appointments </h3>
  <div>
    <% @user.appointments_by_status('confirmed').each do |appointment| %>

      <%= render "events/event_info", event: appointment.event%>
    <% end %>
  </div>
</div>

<% if @user == current_user %>
  <div>
    <h3> Not Confirmed Appointments </h3>
    <div>
      <% @user.appointments_by_status('invited').each do |appointment| %>

        <%= render "events/event_info", event: appointment.event%>
        <%= link_to "I'm going", appointment_path({attendee_id: current_user.id, event_id: appointment.event.id, status: 'confirmed'}), method: :put, data: { confirm: 'Are you sure?' } %>

        <%# <%= appointment.event.description  %1> %>
        <br>
      <% end %>
    </div>
  </div>
<% end %>

<% if @user == current_user %>

  <%= link_to 'Edit profile', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back to events', root_path %>
