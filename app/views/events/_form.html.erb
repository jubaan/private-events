<%= form_with(model: event, local: true) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, autocomplete:"title", class:'form-control' %>
  </div>

  <div class="field form-group ">
    <%= f.label :date %><br />
    <%= f.date_select :date, autocomplete:"date", class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :location %><br />
    <%= f.text_field :location, autocomplete: "location", class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, autocomplete: "location", class:'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class:'btn btn-primary'%>
  </div>

<% end %>
