<p id="notice"><%= notice %></p>

<h1>Events</h1>

    <% @events.each do |event| %>
      <div>
      <%= event.location %>
      <%= event.date %>
      <%= event.host.username %>
      <br>
      <%= link_to 'Show', event %>
      <% if event.host == current_user %>
      <%= link_to 'Edit', edit_event_path(event) %>
      <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
      </div>
    <% end %>

<%= link_to 'New Event', new_event_path %>
